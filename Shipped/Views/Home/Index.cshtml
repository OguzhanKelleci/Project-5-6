@foreach (var kabels in Model.Kabels)
{
@if (!this.User.IsInRole("Admin"))
    {
    <div class="products" style="float:left;">
        <div class="card" style="padding: 5% ;float:left; margin:40px; border:1px solid grey;border-radius: 5px ;">
            <img class="card-img-top" src="@Url.Content(kabels.Afbeelding)" alt="Card image cap" width="200px" height= "100px" style="float:left;";>
            <div class="card-block">
                <a asp-controller="Kabel" asp-action="Details" asp-route-id="@kabels.Id"><h4 class="card-title" style="text-align:center; vertical-align:middle;">@kabels.Naam</h4></a>                
            </div>
            <div>
                <form  asp-controller="Home" asp-action="AddToShoppingCart" method="GET">
                    <div class="form-group">
                    <p> @Html.TextBox("aantal", 1, new { @class= "form-control"})
                        @Html.TextBox("product", @kabels.Id, new {style = "display: none;"})
                        @Html.TextBox("model", "Kabel", new {style = "display: none;"})
                        @Html.TextBox("prijs", @kabels.Prijs, new {style = "display: none;"})
                        <input class="btn btn-default" class="aantal" type="submit" value="Add to cart" />
                    </p>
                    </div>
                </form>
                <form  asp-controller="Wishlist" asp-action="AddToWishlist" method="GET">
                    <p> @Html.TextBox("aantal", 1,new { @class= "form-control"})
                        @Html.TextBox("product", @kabels.Id, new {style = "display: none;"})
                        @Html.TextBox("model", "Kabel", new {style = "display: none;"})
                        @Html.TextBox("prijs", @kabels.Prijs, new {style = "display: none;"})
                        <input class="btn btn-default" class="aantal" type="submit" value="Add to wishlist" />
                    </p>
                </form>
            </div>
        </div>
    </div>
    }

}



