@model login2.Models.Spec

@{
    ViewData["Title"] = "Create";
}
<script> 
        function showMe (box) {
        
        var chboxs = document.getElementsByName("c1");
        var vis = "none";
        for(var i=0;i<chboxs.length;i++) { 
            if(chboxs[i].checked){
             vis = "block";
                break;
            }
        }
        document.getElementById(box).style.display = vis;
    
    
    }
</script>
<h2>Create</h2>

<h4>Spec</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <form>
<input type="checkbox" name="c1" onclick="showMe('int')">A number? 
<input type="checkbox" name="c1" onclick="showMe('string')">A text? 
</form>
            <div id="int" class="form-group" style="display:none">
                <label asp-for="Intvalue" class="control-label"></label>
                <input asp-for="Intvalue" class="form-control" />
                <span asp-validation-for="Intvalue" class="text-danger"></span>
            </div>
            <div id="string" class="form-group" style="display:none">
                <label asp-for="Stringvalue" class="control-label"></label>
                <input asp-for="Stringvalue" class="form-control" />
                <span asp-validation-for="Stringvalue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
